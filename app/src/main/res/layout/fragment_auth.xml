<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/auth_login_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/login"
        android:inputType="textAutoComplete"
        app:layout_constraintBottom_toTopOf="@+id/auth_password_input_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/auth_password_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_login_input_view" />


    <Button
        android:id="@+id/auth_button_sing_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_in"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/auth_password_input_view"
        app:layout_constraintStart_toStartOf="@+id/auth_password_input_view"
        app:layout_constraintTop_toBottomOf="@+id/auth_password_input_view" />

    <Button
        android:id="@+id/auth_button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/auth_password_input_view"
        app:layout_constraintStart_toStartOf="@+id/auth_password_input_view"
        app:layout_constraintTop_toBottomOf="@+id/auth_button_sing_in" />

</android.support.constraint.ConstraintLayout>